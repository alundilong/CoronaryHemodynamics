# Script
#     mountBlueCFD
#
# Description
#     Help script for mounting the conventional blueCFD-Core paths.
#
#------------------------------------------------------------------------------

export BLUECFDPATH=$(cat $HOME/.blueCFDOrigin | sed 's=\\=/=g')

if ! $(mount | grep $HOME/blueCFD > /dev/null 2>&1); then

    [ ! -d $HOME/blueCFD ] && mkdir $HOME/blueCFD
    [ ! -d $HOME/AddOns ] && mkdir $HOME/AddOns

    mount $BLUECFDPATH $HOME/blueCFD
    mount $BLUECFDPATH/AddOns $HOME/AddOns

fi
